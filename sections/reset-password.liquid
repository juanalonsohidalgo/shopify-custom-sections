<script
  type="application/json"
  data-section-type="reset-password-page"
  data-section-id="{{ section.id }}"
>
</script>

<section
  class="reset-password"
  data-section-id="{{ section.id }}"
>

  <div class="reset-password__header">
    <h1 class="reset-password__heading">
      {{ 'customer.reset_password.title' | t }}
    </h1>
  </div>

  <div class="reset-password__wrapper">
    {% form 'reset_customer_password' %}
      <p class="reset-password__subtext">
        {{ 'customer.reset_password.subtext' | t: email: email }}
      </p>

      {{ form.errors | default_errors }}

      <div id="password">
        <label
          class="large"
          for="reset-password"
        >
          {{- 'customer.reset_password.password' | t -}}
        </label>
        <input
          id="reset-password"
          type="password"
          value=""
          name="customer[password]"
          size="16"
        >
      </div>

      <div id="password_confirm">
        <label for="reset-password-confirmation">
          {{- 'customer.reset_password.password_confirm' | t -}}
        </label>
        <input
          id="reset-password-confirmation"
          type="password"
          value=""
          name="customer[password_confirmation]"
          size="16"
        >
      </div>

      <button
        class="reset-password__button"
        type="submit"
      >
        {{- 'customer.reset_password.submit' | t -}}
      </button>
    {% endform %}
  </div>
</section>
